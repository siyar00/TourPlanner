<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.technikum.planner.view.RouteMapController" prefHeight="400.0" prefWidth="600.0">
    <SplitPane dividerPositions="0.5" orientation="horizontal" VBox.vgrow="ALWAYS">
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="%MediaDetails_Tab_General" style="-fx-background-color: transparent;">
                <content>
                    <TextArea fx:id="contentTextArea"/>
                </content>
            </Tab>
            <Tab text="%MediaDetails_Tab_Route" style="-fx-background-color: transparent;">
                <content>
                    <TextArea/>
                </content>
            </Tab>
            <Tab text="%MediaDetails_Tab_Misc" style="-fx-background-color: transparent;">
                <content>
                    <TextArea/>
                </content>
            </Tab>
        </TabPane>
    </SplitPane>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
