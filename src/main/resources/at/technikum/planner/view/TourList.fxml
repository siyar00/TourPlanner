<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="at.technikum.planner.view.TourListController" prefHeight="400.0" prefWidth="600.0">
    <ToolBar styleClass="tool-bar">
        <Label text="%TourList"/>
        <Pane HBox.hgrow="ALWAYS"/>
        <Button accessibleText="Add" onAction="#onButtonAdd" text="+"/>
        <Button accessibleText="Delete" onAction="#onButtonRemove" text="-">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
        </Button>
        <MenuButton text="...">
            <items>
                <MenuItem text="%TourList_Edit"  onAction="#onEditButton"/>
            </items>
        </MenuButton>
    </ToolBar>
    <ListView styleClass="list-cell" fx:id="tourNameListView" VBox.vgrow="ALWAYS"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

</VBox>
