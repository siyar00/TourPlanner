<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="110.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="at.technikum.planner.view.TourModalController">
    <SplitPane prefHeight="120.0" prefWidth="400.0">
        <TextField fx:id="TourName" alignment="CENTER" onKeyPressed="#enterKey" prefHeight="32.0" prefWidth="380.0"
                   promptText="%TourModal_Tourname"/>
        <padding>
            <Insets left="10.0" right="10.0"/>
        </padding>
    </SplitPane>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0">
        <Button onAction="#okayButton" text="%TourModal_Okay">
            <HBox.margin>
                <Insets left="10.0" right="10.0"/>
            </HBox.margin>
        </Button>
        <Button onAction="#deleteButton" text="%TourModal_Delete">
            <HBox.margin>
                <Insets left="10.0" right="10.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="exitButton" onAction="#closeWindow" text="%TourModal_Cancel">
            <HBox.margin>
                <Insets left="10.0" right="10.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
