<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="150.0" prefWidth="400.0" focusTraversable="true" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum.planner.view.dialog.TourEditDialogController">
    <content>
        <VBox >
            <VBox>
                <VBox>
               <Label text="%TourModal_TourName">
                  <VBox.margin>
                     <Insets left="10.0" />
                  </VBox.margin>
               </Label>
                    <TextField fx:id="tourName" alignment="CENTER" focusTraversable="false" onKeyPressed="#enterKey" prefHeight="32.0" promptText="%TourModal_TourName">
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </VBox.margin>
                    </TextField>
                </VBox>
                <VBox>
                    <Label text="%TourModal_Description">
                        <VBox.margin>
                            <Insets left="10.0" />
                        </VBox.margin>
                    </Label>
                    <TextField fx:id="tourDescription" alignment="CENTER" focusTraversable="false" onKeyPressed="#enterKey" prefHeight="32.0" prefWidth="380.0" promptText="%TourModal_Address">
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </VBox.margin>
                    </TextField>
                </VBox>
                <VBox>
                    <Label text="%TourModal_Start">
                        <VBox.margin>
                            <Insets left="10.0" />
                        </VBox.margin>
                    </Label>
                    <TextField fx:id="tourStartAddress" alignment="CENTER" focusTraversable="false" onKeyPressed="#enterKey" prefHeight="32.0" promptText="%TourModal_Address">
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </VBox.margin>
                    </TextField>
                </VBox>
                <VBox>
                    <Label text="%TourModal_Destination">
                        <VBox.margin>
                            <Insets left="10.0" />
                        </VBox.margin>
                    </Label>
                    <TextField fx:id="tourEndAddress" alignment="CENTER" focusTraversable="false" onKeyPressed="#enterKey" prefHeight="32.0" prefWidth="380.0" promptText="%TourModal_Address">
                        <VBox.margin>
                            <Insets left="10.0" right="10.0" />
                        </VBox.margin>
                    </TextField>
                </VBox>
            </VBox>
            <ComboBox fx:id="transportComboBox" focusTraversable="false" onKeyPressed="#enterKey" prefHeight="40.0" prefWidth="400.0" promptText="%TourModal_Transportation">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </ComboBox>
            <HBox alignment="CENTER" prefHeight="45.0" prefWidth="400.0">
                <Button fx:id="editButton" disable="true" onAction="#onEditButton" text="%TourList_Edit">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
                <Button onAction="#onDeleteButton" text="%TourModal_Delete">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="exitButton" onAction="#onCloseWindow" text="%TourModal_Cancel">
                    <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </HBox.margin>
                </Button>
            </HBox>
        </VBox>
    </content>
</DialogPane>
