<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.technikum.planner.view.RouteMapController">
    <SplitPane orientation="horizontal" VBox.vgrow="ALWAYS">
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab styleClass="tab" text="%MediaDetails_Tab_General">
                <VBox prefHeight="200.0" prefWidth="100.0">
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label prefWidth="150.0" text="%TourModal_Start">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Text fx:id="startingAddress" strokeType="OUTSIDE" strokeWidth="0.0" />
                  <VBox.margin>
                     <Insets top="5.0" />
                  </VBox.margin>
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label prefHeight="0.0" prefWidth="150.0" text="%TourModal_Destination" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Text fx:id="destinationAddress" strokeType="OUTSIDE" strokeWidth="0.0" />
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label prefWidth="150.0" text="%Distance">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Text fx:id="distance" strokeType="OUTSIDE" strokeWidth="0.0" />
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label prefWidth="150.0" text="%Time">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Text fx:id="time" strokeType="OUTSIDE" strokeWidth="0.0" />
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label prefWidth="150.0" text="%Highway">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Text fx:id="highway" strokeType="OUTSIDE" strokeWidth="0.0" />
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label prefWidth="150.0" text="%Tolls">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Text fx:id="toll" strokeType="OUTSIDE" strokeWidth="0.0" />
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Label prefWidth="150.0" text="%TourModal_Transportation">
                            <HBox.margin>
                                <Insets left="10.0" />
                            </HBox.margin>
                        </Label>
                        <Text fx:id="transportation" strokeType="OUTSIDE" strokeWidth="0.0" />
                    </HBox>
                </VBox>
            </Tab>
            <Tab styleClass="tab" text="%MediaDetails_Tab_Route">
                <Pane VBox.vgrow="ALWAYS">
                    <ImageView fx:id="mapImage" fitHeight="-Infinity" fitWidth="-Infinity" pickOnBounds="true" />
                </Pane>
            </Tab>
            <Tab styleClass="tab" text="%MediaDetails_Tab_Logs">
                <fx:include source="TourLogs.fxml" />
            </Tab>
        </TabPane>
    </SplitPane>
</VBox>
